<main class="container">
  <h1>Register</h1>
  <form id="registerForm" action="/api/sessions/register" method="POST" class="form-group w-50">
    <label>Nombre</label>
    <input type="text" name="first_name" placeholder="Ingresa tu nombre" class="form-control" />
    <label>Apellido</label>
    <input type="text" name="last_name" placeholder="Ingresa tu Apellido" class="form-control" />
    <label>Email</label>
    <input type="email" name="email" placeholder="Ingresa tu mail ejemplo@mail.com" class="form-control" />
    <label>Edad</label>
    <input type="number" name="age" placeholder="Cuantos años tienes" class="form-control" />
    <label>password</label>
    <input type="password" name="password" placeholder="Ingresa tu contraseña" class="form-control" />
    <button class="btn btn-outline-dark w-100 mt-3">Registrarse</button>
  </form>
  <div>
    <a class="btn btn-dark w-50 mt-3" href="/api/sessions/github">Registrate con
      Github</a>
  </div>
  <div>
    <a class="btn btn-clear btn-outline-dark w-50 mt-3" href="/login">¿Ya tienes
      usuario? ir al Login</a>
  </div>
</main>

<script src=" https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.all.min.js "></script>
<script async src="/js/register.js"></script>